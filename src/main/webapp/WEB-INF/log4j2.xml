<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
        <Appenders>
                <Console name="console" target="SYSTEM_OUT">
                        <PatternLayout pattern="%d{DEFAULT} %-5p - %-26.26c{1} [%t] - %m%n" />
                </Console>
        </Appenders>

        <Loggers>
                <Root level="info" additivity="false">
                        <AppenderRef ref="console"/>
                </Root>
        </Loggers>
</Configuration>